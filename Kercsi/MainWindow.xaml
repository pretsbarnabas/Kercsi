<Window x:Class="Kercsi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kercsi"
        mc:Ignorable="d"
       WindowStyle="None" Height="1080" Width="1920" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml"></ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Rectangle Height="100" Fill="AntiqueWhite" Stroke="Black" Width="100" x:Name="Rt_Dice" MouseDown="Rt_Dice_MouseDown"/>
        <Grid x:Name="Resources">
            <StackPanel x:Name="stackpanel_inventory" Grid.Column="0" Margin="0,0,0,714" >
                <WrapPanel>
                    <Label Content="Wood:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label x:Name="wood" Content="{Binding Wood}"></Label>
                </WrapPanel>
                <WrapPanel>
                    <Label Content="Clay:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label x:Name="clay" Content="{Binding Clay}"></Label>
                </WrapPanel>
                <WrapPanel>
                    <Label Content="Metal:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label x:Name="metal" Content="{Binding Metal}"></Label>
                </WrapPanel>
                <WrapPanel>
                    <Label Content="Treasure:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label x:Name="treasure" Content="{Binding Treasure}"></Label>
                </WrapPanel>
                <WrapPanel>
                    <Label Content="Shovel:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label Content="{Binding Shovel}"></Label>
                </WrapPanel>
                <WrapPanel>
                    <Label Content="Road:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label Content="{Binding Road}"></Label>
                </WrapPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1" x:Name="Gr_Table">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
        </Grid>
        <Grid Grid.Column="2" x:Name="Gr_crafting">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="1.5*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid x:Name="Gr_craftingTable">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
            </Grid>
            <StackPanel x:Name="stackpanel_crafting" Grid.Row="1">
                <Button IsEnabled="{Binding CraftRoadIsActive}" x:Name="btn_craftroad" Content="Craft Road" HorizontalAlignment="Left" Margin="50,100,0,0" VerticalAlignment="Top" Width="68" Click="btn_craftroad_Click"/>
                <Button IsEnabled="{Binding CraftShovelIsActive}" x:Name="btn_craftshovel" Content="Craft Shovel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 120, 0, 0" Click="btn_craftshovel_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
